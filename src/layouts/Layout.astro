---
import "../styles/global.css"
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
export interface Props {
	title: string;
	lang: string;
	langUrl: string;
}

let { title, lang, langUrl} = Astro.props;
lang = lang || 'en';
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://d1qy7lc15wxwmt.cloudfront.net/images/pp.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="container-xxl">
		<Navbar lang={lang} langUrl={langUrl} />
		<slot />
		<Footer />
	</body>
</html>